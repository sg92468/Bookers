<p id="notice"></p>
<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
   <% @books.each do |book| %>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <td><%= link_to "Show", book_path(book) %></td>
    <td><%= link_to "Edit", edit_book_path(@books) %></td>
    <td><%= link_to "Destroy", book_path(@books), method: :delete, data: { confirm: 'Are you sure?' } %></td>
   <% end %>
</table>

<h2>New book</h2>
<%= form_with model:@book, local:true do |f| %>
<div class="field">
  <lavel for="book_title">Title</lavel>
  <%= f.text_field :title %>
</div>
<div class="field">
  <lavel for="book_body">Body</lavel>
  <%= f.text_area :body %>
</div>
<div class="actions">
  <%= f.submit 'Create Book' %>
</div>
<% end %>